<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.test.project.Dao.BoardDao">
	<select id="board_Cnt" parameterType="String" resultType="int">
	SELECT  count(*) FROM  ${value};
	</select>
	<select id="board_list" parameterType="Hashmap" resultType="com.test.project.Dto.BoardBean">
	SELECT * FROM ${db_table} ORDER BY board_no asc LIMIT #{start}, 10
	</select>
	<insert id="board_Insert" parameterType="hashmap" >
		INSERT INTO ${dbtable}
		(
		`board_nm`,
		`board_content`,
		`board_fileNo`
		)
		VALUES
		(
		#{bean.board_nm},
		#{bean.board_content},
		#{bean.board_fileNo}
		)
	</insert>
</mapper>