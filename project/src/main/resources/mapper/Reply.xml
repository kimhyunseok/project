<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.test.project.Dao.BReplyDao">


	<insert
		id="reply_Insert"
		parameterType="Hashmap">
		INSERT INTO tb_event_board_reply
		(
		`board_no`,
		`reply_content`,
		`reply_id`,
		`reply_in_date`,
		`reply_re_no`
		)
		VALUES
		(
		#{board_no},
		#{board_content},
		'관리자',
		NOW(),
		#{board_no}
		)
	</insert>
	<select
		id="reply_List"
		parameterType="String"
		resultType="com.test.project.Dto.BRelplyBean">
		SELECT `reply_no`,
		`board_no`,
		`reply_content`,
		`reply_id`,
		`reply_level`,
		`borad_id`,
		`reply_in_date`,
		`reply_del_date`,
		`reply_upt_date`
		FROM `tb_event_board_reply`
		WHERE BOARD_NO=20
		ORDER BY REPLY_ID AND REPLY_NO;

	</select>
</mapper>